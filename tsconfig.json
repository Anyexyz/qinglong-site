{
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "i18n": ["./i18n.json"],
      "@theme": ["./theme"],
      "@/assets/*": ["./docs/public/*"],
      "@/components/*": ["./components/*"],
      "@zh/*": ["./docs/zh/*"],
      "@en/*": ["./docs/en/*"]
    }
  },
  "include": [
    "./rspress.config.ts",
    "docs/**/*",
    "components/**/*",
    "theme/**/*"
  ],
  "mdx": {
    "checkMdx": true
  }
}
